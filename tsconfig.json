{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@pennsieve-viz/core": ["./packages/core/src"],
      "@pennsieve-viz/tsviewer": ["./packages/ts-viewer/src"],
      "@pennsieve-viz/micro-ct": ["./packages/micro-ct/src"],
      "@pennsieve-viz/orthogonal": ["./packages/orthogonal/src"]
    }
  },
  "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.vue"],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/ts-viewer" },
    { "path": "./packages/micro-ct" },
    { "path": "./packages/orthogonal" }
  ]
}
